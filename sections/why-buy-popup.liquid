                  why_image: section.settings.image_7, title: section.settings.title_7, text: section.settings.text_7, 
                  button_label: section.settings.button_label_7, button_link: section.settings.button_link_7 %}
              {% render 'why-buy-blocks', column_width: column_width, align_text: section.settings.align_text_C, enable_image: section.settings.enable_image_8, 
                  why_image: section.settings.image_8, title: section.settings.title_8, text: section.settings.text_8, 
                  button_label: section.settings.button_label_8, button_link: section.settings.button_link_8 %}
            </div>
            <!-- END TEXT-COLUMNS -->
          </div>
        </div>
        <button type="button" class="modal__close js-modal-close text-link">
          <svg aria-hidden="true" focusable="false" role="presentation" class="icon icon-close" viewBox="0 0 64 64"><path d="M19 17.61l27.12 27.13m0-27.12L19 44.74"/></svg>
          <span class="icon__fallback-text">{{ 'general.accessibility.close_modal' | t | json }}</span>
        </button>
      </div>
    </div>
  </div>
</div>

