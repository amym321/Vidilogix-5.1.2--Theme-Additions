{% comment %} Why Buy Vidlogix popup modal - am {% endcomment %}

{% style %}
  h2.section-header__title {
    font-size: 18px;
  }
{% endstyle %}

{%- if section.settings.mode != 'disabled' -%}

<div class="why-buy-popup">
  <div
    id="NewsletterPopup-{{ section.id }}"
    class="modal modal--square modal--mobile-friendly"
    data-section-id="{{ section.id }}"
    data-section-type="newsletter-popup"
    data-test-mode="{% if section.settings.mode == 'testing' %}true{% else %}false{% endif %}">
    <div class="modal__inner">
      <div class="modal__centered medium-up--text-center">
        <div class="modal__centered-content">
          <div class="newsletter">
            <!-- Block Content -->
            <!-- Rich Text -->
            <div class="text-{{ section.settings.align_text }} page-width page-width--narrow">
              <div class="theme-block">
                {%- if section.settings.title_rich -%}
                  <br>
                  <h2 class="section-header__title">{{ section.settings.title_rich }}</h2>
                  <br><br>
                {%- endif -%}
                <div class="rte">
                  {%- if section.settings.text_rich  -%}
                    {{ section.settings.text_rich }}
                  {%- endif -%}
                  <br>
                </div >
              </div>
            </div>
            <!-- 1ST 4 BLOCKS -->
            <div class="grid flex-grid grid--uniform grid--flush-bottom">
              {%- assign column_width = 'medium-up--one-quarter' -%}
              {% render 'why-buy-blocks', column_width: column_width, align_text: section.settings.align_text_A, enable_image: section.settings.enable_image_1, 
                  why_image: section.settings.image_1, title: section.settings.title_1, text: section.settings.text_1, 
                  button_label: section.settings.button_label_1, button_link: section.settings.button_link_1 %}
              {% render 'why-buy-blocks', column_width: column_width, align_text: section.settings.align_text_A, enable_image: section.settings.enable_image_2, 
                  why_image: section.settings.image_2, title: section.settings.title_2, text: section.settings.text_2, 
                  button_label: section.settings.button_label_2, button_link: section.settings.button_link_2 %}
              {% render 'why-buy-blocks', column_width: column_width, align_text: section.settings.align_text_A, enable_image: section.settings.enable_image_3, 
                  why_image: section.settings.image_3, title: section.settings.title_3, text: section.settings.text_3, 
                  button_label: section.settings.button_label_3, button_link: section.settings.button_link_3 %}
              {% render 'why-buy-blocks', column_width: column_width, align_text: section.settings.align_text_A, enable_image: section.settings.enable_image_4, 
                  why_image: section.settings.image_4, title: section.settings.title_4, text: section.settings.text_4, 
                  button_label: section.settings.button_label_4, button_link: section.settings.button_link_4 %}
            </div>
            <!-- MIDDLE BLOCK -->
            <div class="grid flex-grid grid--uniform grid--flush-bottom">
              {%- assign column_width = '' -%}
              {% render 'why-buy-blocks', column_width: column_width, align_text: section.settings.align_text_B, enable_image: section.settings.enable_image_B, 
                  why_image: section.settings.image_B, title: section.settings.title_B, text: section.settings.text_B, 
                  button_label: section.settings.button_label_B, button_link: section.settings.button_link_B %}
            </div>
            <!-- LAST 4 BLOCKS -->
            <div class="grid flex-grid grid--uniform grid--flush-bottom">
              {%- assign column_width = 'medium-up--one-quarter' -%}
              {% render 'why-buy-blocks', column_width: column_width, align_text: section.settings.align_text_C, enable_image: section.settings.enable_image_5, 
                  why_image: section.settings.image_5, title: section.settings.title_5, text: section.settings.text_5, 
                  button_label: section.settings.button_label_5, button_link: section.settings.button_link_5 %}
              {% render 'why-buy-blocks', column_width: column_width, align_text: section.settings.align_text_C, enable_image: section.settings.enable_image_6, 
                  why_image: section.settings.image_6, title: section.settings.title_6, text: section.settings.text_6, 
                  button_label: section.settings.button_label_6, button_link: section.settings.button_link_6 %}
