{% comment %} media drawer - am {% endcomment %}
{% style %}
  #media-drwr-overlay {
    height: 100%;
    width: 100%;
    display: none;
      background-color: rgba(0,0,0,.4);
      bottom: 0;
      left: 0;
      position: fixed;
      right: 0;
      top: 0;
      z-index: 1000;
  }
  #media-drawer {
    display: none;
    z-index: 10000000000;
  }
  .media-drwr-container .drawer--right {
    width: 997px;
  }
  @media only screen and (max-width: 997px) {
    .media-drwr-container .drawer--right {
      width: 100vw;
    }
  }

  .media-drwr-inner {
    height: 100%;
    padding: .25rem 0.625rem 0 2.5rem;
  }
  .media-iframe {
    width: 100%;
    /*height: 85vh;*/
    border: none;
    height: calc(100vh - 5.3125rem);
  }
{% endstyle %}

<div id="why-outer-modal" class="media-drwr-container">
  <div id="media-drwr-overlay" style="background-color: rgba(0, 0, 0, 0.507);"></div>
  <div id="media-drawer" class="drawer drawer--right ">
    <div id="why-modal-inner">
      <span class="close-why-popup">&times;</span>
      <div class="media-drwr-inner">
        <iframe class="media-iframe"
          src="https://cdn.shopify.com/s/files/1/0056/9632/3651/files/IQ-Panel-4-Installation-Manual-4.0.1-210928-FINAL.pdf?v=1643217960"></iframe>
      </div>
    </div>
  </div>
</div>
